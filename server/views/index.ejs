<!DOCTYPE html>
<html lang='en'>

<head>
    <meta charset="utf-8">
    <title>SharuX</title>

    <!-- FONTS -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@300&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans+Condensed:wght@300&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Turret+Road:wght@500&display=swap" rel="stylesheet">

    <!-- LIBS -->


    <!-- SHIT -->
    <link rel="shortcut icon" href="/assets/favicon.png" />

    <!-- CSS -->
    <link rel="stylesheet" href="/assets/css/default.css" type="text/css">
    <link rel="stylesheet" href="/assets/css/index.css" type="text/css">

    <!-- META - todo: add more -->
    <meta name="theme-color" content="#00ff00">
    <meta property="og:title" content="SharuX">
    <meta name="twitter:title" content="SharuX">
</head>

<body>

    <%- include('./includes/navbar'); %>

    <!--<div class="title">
        <h1 class="blueneon">SharuX - Feature-Rich ShareX uploader<h1>
    </div>-->

    <div class="main">
        <div class="upload">
            <form action="/api/upload" method="POST" enctype="multipart/form-data" name="uploadForm" id="uploadForm">
                <h3 class="boxTitle">Upload</h3>

                <div>
                    <label for="uploadForm-file">File: </label>
                    <input type="file" name="file" id="uploadForm-file" form="uploadForm" required>
                </div>

                <div>
                    <label for="uploadForm-token">Token: </label>
                    <input type="text" name="token" id="uploadForm-token" form="uploadForm" required>
                </div>

                <div>
                    <label for="uploadForm-logic">URL Logic:</label>
                    <select name="logic" id="uploadForm-logic"
                        form="uploadForm" required>
                        <option value="" disabled selected>Please select an option&hellip;</option>
                        <option value="standard">Standard</option>
                        <option value="zws">Zero Width Spaces</option>
                    </select>
                </div>

                <div>
                    <div>
                        <button type="submit">Upload</button>
                    </div>
                </div>
            </form>
        </div> 
        
        <div class="shorten">

            <form action="/api/shorten" method="POST" enctype="multipart/form-data" name="shortenForm" id="shortenForm">
                <h3 class="boxTitle">URL Shortener</h3>

                <div>
                    <label for="url">URL: </label>
                    <input type="text" name="url" id="url" form="shortenForm" autocomplete="off" required>
                </div>
                <div>
                    <label for="token">Token: </label>
                    <input type="text" name="token" id="token" form="shortenForm" required>
                </div>
                <div>
                    <label for="shortenForm-logic">URL Logic:</label>
                    <select name="logic" id="shortenForm-logic" form="shortenForm" required>
                        <option value="" disabled selected>Please select an option&hellip;</option>
                        <option value="standard">Standard</option>
                        <option value="zws">Zero Width Spaces</option>
                    </select>
                </div>

                <div>
                    <div>
                        <button type="submit">Shorten</button>
                    </div>
                </div>
            </form>

        </div>
    </div>

    <% if(success) { %>
    <div class="message">
        <h1 class="message-message" style="color: green"><%=  success  %></h1>
    </div>
    <% } else if(error) { %>
    <div class="message">
        <h1 class="message-message" style="color: red"><%=  error  %></h1>
    </div>
    <% } %>

    <%- include('./includes/footer'); %>

</body>

</html>